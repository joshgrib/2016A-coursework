<div class="row">
  <div class="col-sm-12">
    <form id="{{#if clientForm}}client-form{{^}}server-form{{/if}}" class="server-form" method="post">
      <header>
        {{#if clientForm}}Client-side{{^}}Server-side{{/if}} text manipulation
      </header>
      <div class="form-group">
        <label for="source_text">Text snippet</label>
        <input type="text" class="form-control" id="source_text" name="source_text" placeholder="Blah blah blah I'm some text" pattern="^.{1,}$" title="Please enter something." required="" value="{{formData.source_text}}">
      </div>
      <div class="form-group">
        <label for="input_string">Stuff to insert</label>
        <input type="text" class="form-control" id="input_string" name="input_string" placeholder="[:D]" pattern="^.{1,}$" title="Please enter something." required="" value="{{formData.input_string}}">
      </div>
      <div class="form-group">
        <label for="iterations">Number of inserts</label>
        <input type="number" class="form-control small_form_text" name="iterations" id="iterations" placeholder="5" title="Please enter a whole number 1-25" required="" value="{{formData.iterations}}">
      </div>
      <div class="form-group">
        <label for="gap">Gap between inserts</label>
        <input type="number" class="form-control" name="gap" id="gap" placeholder="3" title="Please enter a whole number 1-25" required="" value="{{formData.gap}}">
      </div>

      {{#if clientForm}}
      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here" id="error-text"></div>
      </div>
      {{^}}
        {{#if error}}
          <div class="form-group">
            <div class="alert alert-danger">
              {{ error }}
            </div>
          </div>
        {{/if}}
      {{/if}}

      <div class="form-group">
        <button type="submit" class="btn btn-default" {{#if clientForm}}onclick="processForm();"{{/if}}>DO IT!</button>
      </div>

      {{#if clientForm}}
      <div class="form-group hidden" id="result-container">
        <div class="alert alert-success text-goes-here" id="result-text"></div>
      </div>
      {{^}}
        {{#if result}}
          <div class="form-group">
            <div class="alert alert-success">
              The result is: {{ result }}
            </div>
          </div>
        {{/if}}
      {{/if}}

    </form>
  </div>
</div>
