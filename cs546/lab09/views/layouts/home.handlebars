<section id="input_form" class="container col-sm-4">
    <h2><small>Add a new key-value pair to localStorage!</small></h2>
    <form class="form form-horizontal" id="localstorage-form">
        <div class="form-group">
            <label for="localstorage-key" class="col-sm-2 control-label">Key</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="localstorage-key" placeholder="key_name">
            </div>
        </div>
        <div class="form-group">
            <label for="localstorage-value" class="col-sm-2 control-label">Value</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="localstorage-value" placeholder="value">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Add Data</button>
                <button type="button" class="btn btn-danger" id="clear-storage">Clear LocalStorage</button>
            </div>
        </div>
    </form>
    <div class="alert alert-danger hidden" id="form-alert">
    </div>
</section>
<section id="data-table" class="container col-sm-4">
    <h2><small>Some statistics</small></h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Description</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody id="persistent-vals">
            <tr>
                <td>1.5s intervals since page load</td>
                <td id="intervals-counter">Not set yet</td>
            </tr>
            <tr>
                <td>Form submissions</td>
                <td id="form-subissions-count">Not set yet</td>
            </tr>
            <tr>
                <td>Last input value</td>
                <td id="last-input-value">Not set yet</td>
            </tr>
            <tr>
                <td>Location hash</td>
                <td id="loc-hash">Not set yet</td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button type="button" class="btn btn-default" id="add-hash">Add hash</button>
            <button type="button" class="btn btn-danger" id="remove-hash">Remove hash</button>
        </div>
    </div>
</section>
<section id="localstorage-data-table" class="container col-sm-4">
    <h2><small>Contents of localStorage</small></h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>key</th>
                <th>localStorage[key]</th>
            </tr>
        </thead>
        <tbody id="localstorage-vals">
            <tr>
                <td>Location hash</td>
                <td id="loc-hash">Not set yet</td>
            </tr>
        </tbody>
    </table>
</section>
